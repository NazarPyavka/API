<!DOCTYPE html>
<html lang="en">
<head>

    <meta name="viewport" content="width=device-width, initial-scale=1.0">

</head>
<body>
<style>
.dogcardlist{
    max-width:1388px ;
    display: flex;
    gap: 50px;
    flex-direction: column;
    flex-wrap: wrap;
    
}
.text{

    font-size: 32px;
    font-weight: 800;  
    color: pink;
}
.card{
    width: 100px;
    height: 100px;
    border-radius: 30%;
    border: 1px solid #000;
}
.carditems{
    display: flex;
    gap: 20px;
    flex-direction: row;
    border: 1px solid green;
}

</style>
    <div id="dogcardlist" class="dogcardlist">
       <%   cards.forEach((card) =>{%>
        <div class="carditems">
    <div class="card" style="background-color: <%=card.color%>"></div>
    <p class="text"><%=card.text%></p>
</div>
   <% }) %>
    </div>
</body>
</html>

